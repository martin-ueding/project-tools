#!/bin/bash
# Copyright Â© 2012-2013 Martin Ueding <dev@martin-ueding.de>

# This script takes a number of tar archive which extract to a single directory,
# which is the name of the tarball itself (without the ``.tar.gz`` though).
# Then it will run ``git gc`` and ``make clean`` to remove all unneeded files
# and make the tar archive as small as possible.

set -e
set -u

tmpdir="$(mktemp -d)"

mkdir -p "$tmpdir"

cd "$PROJECTS_DIR"

for tarball in *.tar.gz
do
	if type boxes &> /dev/null
	then
		echo "$tarball" | boxes -a c -s 79 -d shell
	fi

	tar -xzf "$tarball" -C "$tmpdir"

	pushd "$tmpdir"

	pushd "${tarball%.tar.gz}"

	if git gc --aggressive
	then
		echo "Ran git gc"
	fi

	if make clean
	then
		echo "Ran make clean"
	fi

	popd

	tar -czf "$tarball" "${tarball%.tar.gz}"

	rm -rf "${tarball%.tar.gz}"

	popd

	mv "$tmpdir/$tarball" .
done

rm -rf "$tmpdir"
